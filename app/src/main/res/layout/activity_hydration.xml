<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F7E9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvStayHydrated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay"
            android:textSize="48sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:layout_marginTop="40dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hydrated"
            android:textSize="42sp"
            android:textStyle="bold"
            android:textColor="#4CAF50" />

        <TextView
            android:id="@+id/tvGlassCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/8 Glasses"
            android:textSize="25sp"
            android:textColor="#4CAF50"
            android:layout_marginTop="12dp" />

        <!-- Glass Grid (2 rows Ã— 4 columns) -->
        <GridLayout
            android:id="@+id/glassContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:columnCount="4"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true" />

        <!-- Increment / Decrement Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnDecrement"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="-"
                android:textSize="42sp"
                android:backgroundTint="#81D4FA"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnIncrement"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="+"
                android:textSize="42sp"
                android:layout_marginStart="20dp"
                android:backgroundTint="#81D4FA"
                android:textColor="#ffffff" />
        </LinearLayout>

        <!-- Motivational Text -->
        <TextView
            android:id="@+id/tvBoastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="#388E3C"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

        <!-- Navigation Buttons -->
        <Button
            android:id="@+id/btnNext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="23sp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:textSize="23sp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#ffffff" />

    </LinearLayout>
</ScrollView>
