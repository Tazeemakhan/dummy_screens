<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F5E9"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/card_background_progress"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvProgressTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Track Your Progress"
            android:textColor="#2E7D32"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- User Info -->
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="👤 Name: "
            android:textColor="#424242"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvInitialWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="⚖️ Initial Weight: "
            android:textColor="#424242"
            android:textSize="16sp" />

        <!-- Input Section -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNewWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter New Weight (kg)"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxBackgroundMode="outline"
            app:boxStrokeColor="#4CAF50"
            app:hintTextColor="#4CAF50">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Duration (in days)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Track Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTrackProgress"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#4CAF50"
            android:text="Track Progress"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:cornerRadius="8dp" />

        <!-- Result Box -->
        <LinearLayout
            android:id="@+id/resultBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/result_background_progress"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/tvChangeResult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="🎯 Change: -2 kg in 7 days"
                android:textColor="#2E7D32"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏅 Badge: Fitness Starter"
                android:textColor="#616161"
                android:textSize="15sp" />
        </LinearLayout>

        <!-- Chart -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_marginTop="20dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>